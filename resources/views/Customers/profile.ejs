    <%-include('../partials/navbar') %>

        <div style="text-align: center; color: rgb(0, 0, 0);">
            <span style="font-size:75px; font-weight:bolder; text-transform:uppercase;">
                <%= user.name %>'S
            </span>
            <span style="font-size:75px; font-weight: 100;">Profile</span>
        </div>
        <hr />
        <div class="container">
            <div class="card">
                <img src="<%=user.avatar %> " alt="user.username" style="width:100%">
                <h1>
                    <%=user.name %>
                </h1>
                <p class="title">
                    <%=user.role%>
                </p>
                <p>
                    <%=user.email %>
                </p>
                <p>
                <form action="/logout">
                    <button>Logout</button>
                </form>
                </p>
            </div>

            <div class="card" style="width: 37vw; height: 60vh; background-color: rgb(200, 200, 200);">
                <div class="updateForm">
                    <form action="/updateUser/<%=user._id %>" method="post" enctype="multipart/form-data">
                        <label for="username" class="label">Name </label>
                        <br>
                        <input type="text" value="<%= user.name %>" id="username" name="name" class="input">
                        <br>
                        <label for="email" class="label">Email</label>
                        <br>
                        <input type="email" value="<%= user.email %>" id="email" name="email" class="input">
                        <br>
                        <label for="avatar" class="label">Avatar</label>
                        <br>
                        <input type="file" placeholder="profile picture" name="avatar" class="input file" id="avatar">
                        <br>
                        <button type="submit" class="btn"> Update Profile</button>
                    </form>
                </div>
            </div>
        </div>

